{
    "name": "GTasks",
    "description": "Google Tasks Menu Bar App",
    "version": "0.1.1",
    "author": "Sayan Goswami",
    "license": "MIT",
    "repository": "github:say4n/gtasks.app",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder --mac",
        "release": "electron-builder --mac --publish always"
    },
    "build": {
        "appId": "gtasks.app.sayan.page",
        "mac": {
            "category": "public.app-category.utility",
            "darkModeSupport": true,
            "icon": "tasks.icns",
            "extendInfo": {
                "LSUIElement": 1
            }
        },
        "publish": "github"
    },
    "dependencies": {
        "auto-launch": "^5.0.5",
        "electron-log": "^4.2.4",
        "electron-updater": "^4.3.5",
        "menubar": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^10.1.5",
        "electron-builder": "^22.9.1"
    }
}
